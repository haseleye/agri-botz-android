<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="gadget"
            type="com.example.agribotz.app.ui.home.GadgetCardUi" />
        <variable
            name="viewModel"
            type="com.example.agribotz.app.viewmodels.home.SiteDetailsViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Gadget name -->
            <TextView
                android:id="@+id/gadgetName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{gadget.name}"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/gpsBtn" />

            <!-- GPS button -->
            <ImageView
                android:id="@+id/gpsBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/gps"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/GPS"
                android:scaleType="centerInside"
                android:padding="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- STATUS ROW -->
            <LinearLayout
                android:id="@+id/statusRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/gadgetName"
                app:layout_constraintStart_toStartOf="parent">

                <!-- TERMINATED -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:visibleIf="@{gadget.isTerminated}"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/badge_terminated"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/Terminated"
                        android:onClick="@{() -> viewModel.onStatusIconClicked(gadget.terminatedFullText)}"
                        android:tooltipText="@{gadget.terminatedFullText}"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{gadget.terminatedTimeAgo}"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnBackground" />
                </LinearLayout>

                <!-- INACTIVE -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:visibleIf="@{!gadget.isTerminated &amp;&amp; !gadget.isActive}"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/badge_inactive"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/Inactive"
                        android:onClick="@{() -> viewModel.onStatusIconClicked(gadget.inactiveFullText)}"
                        android:tooltipText="@{gadget.inactiveFullText}"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{gadget.inactiveTimeAgo}"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnBackground" />
                </LinearLayout>

                <!-- ACTIVE -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:visibleIf="@{!gadget.isTerminated &amp;&amp; gadget.isActive}"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/badge_active"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/Active"
                        android:onClick="@{() -> viewModel.onStatusIconClicked(gadget.activeFullText)}"
                        android:tooltipText="@{gadget.activeFullText}"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{gadget.activeTimeAgo}"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnBackground" />
                </LinearLayout>

                <!-- ONLINE -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:visibleIf="@{gadget.showOnlineState &amp;&amp; gadget.isOnline}"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/badge_online"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/Online"
                        android:onClick="@{() -> viewModel.onStatusIconClicked(gadget.onlineFullText)}"
                        android:tooltipText="@{gadget.onlineFullText}"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{gadget.onlineStateTimeAgo}"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnBackground" />
                </LinearLayout>

                <!-- OFFLINE -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:visibleIf="@{gadget.showOnlineState &amp;&amp; !gadget.isOnline}"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/badge_offline"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/Offline"
                        android:onClick="@{() -> viewModel.onStatusIconClicked(gadget.offlineFullText)}"
                        android:tooltipText="@{gadget.offlineFullText}"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{gadget.onlineStateTimeAgo}"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnBackground" />
                </LinearLayout>

            </LinearLayout>

            <!-- Valves / Sensors -->
            <TextView
                android:id="@+id/gadgetDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{"Valves: " + gadget.numberOfValves + "  |  Sensors: " + gadget.numberOfSensors}'
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/statusRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
