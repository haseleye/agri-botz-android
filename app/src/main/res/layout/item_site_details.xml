<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="gadget"
            type="com.example.agribotz.app.ui.home.GadgetCardUi" />
        <variable
            name="viewModel"
            type="com.example.agribotz.app.viewmodels.home.SiteDetailsViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/gadgetName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{gadget.name}"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/gadgetDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{"Valves: " + gadget.numberOfValves + "  |  Sensors: " + gadget.numberOfSensors}'
                app:layout_constraintTop_toBottomOf="@id/gadgetName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/gadgetStatusLine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{gadget.statusLine}"
                app:layout_constraintTop_toBottomOf="@id/gadgetDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
