<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.agribotz.app.ui.home.ScheduleUi" />

        <variable
            name="startIcon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="title"
            type="String" />

        <variable
            name="schedule"
            type="ScheduleUi" />

        <variable
            name="onEdit"
            type="android.view.View.OnClickListener" />

        <variable
            name="onDelete"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- Left icon -->
        <ImageView
            android:id="@+id/ivStartIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@null"
            android:src="@{startIcon}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@null" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text='@{title != null ? title : @string/no_label}'
            android:textSize="14sp"
            android:textColor="@color/colorOnBackground"
            app:layout_constraintStart_toEndOf="@id/ivStartIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEdit" />

        <!-- Details -->
        <TextView
            android:id="@+id/tvDetails1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text='@{schedule != null ? schedule.summaryLine : "Schedule"}'
            android:textSize="12sp"
            android:textColor="@color/colorOnBackground"
            android:alpha="0.75"
            app:layout_constraintStart_toEndOf="@id/ivStartIcon"
            app:layout_constraintTop_toBottomOf="@id/tvSummary"
            app:layout_constraintEnd_toStartOf="@id/btnEdit" />

        <TextView
            android:id="@+id/tvDetails2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:alpha="0.75"
            android:text='@{schedule != null &amp;&amp; schedule.isSet ? ("Start: " + schedule.startDateText + " " + schedule.startTimeText + (schedule.hasEndRecurrence ? ("  â€¢  End: " + schedule.endDateText + " " + schedule.endTimeText) : "")) : null}'
            android:textColor="@color/colorOnBackground"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/btnEdit"
            app:layout_constraintStart_toEndOf="@id/ivStartIcon"
            app:layout_constraintTop_toBottomOf="@id/tvDetails1" />

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="@string/Edit_Settings"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{onEdit}"
            android:enabled='@{schedule != null}'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDelete"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/Delete_Settings"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{onDelete}"
            android:enabled='@{schedule != null}'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
