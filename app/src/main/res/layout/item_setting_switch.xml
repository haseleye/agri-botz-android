<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Left texts -->
        <variable
            name="title"
            type="String" />

        <variable
            name="subtitle"
            type="String" />

        <!-- Right switch state -->
        <variable
            name="checked"
            type="Boolean" />

        <!-- Entire row enabled / disabled -->
        <variable
            name="enabledState"
            type="Boolean" />

        <!-- Callback from switch: (Boolean) -> Unit -->
        <variable
            name="onCheckedChanged"
            type="kotlin.jvm.functions.Function1&lt;java.lang.Boolean, kotlin.Unit&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="54dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:enabledState="@{enabledState}">

        <!-- Divider line (top) -->
        <View
            android:id="@+id/topDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Text container -->
        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/topDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/switchControl">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{title}"
                android:textColor="@color/colorOnBackground"
                android:textSize="18sp"
                android:textStyle="normal"
                tools:text="Water Valve Status (Open)" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@{subtitle}"
                android:textColor="@color/colorOnBackground"
                android:textSize="16sp"
                app:visibleIf="@{subtitle != null &amp;&amp; !subtitle.isEmpty()}"
                tools:text="Automatic irrigation (Off)" />
        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={checked}"
            android:onCheckedChanged="@{(_, isChecked) -> onCheckedChanged != null ? onCheckedChanged.invoke(isChecked) : null}"
            app:layout_constraintTop_toTopOf="@id/textContainer"
            app:layout_constraintBottom_toBottomOf="@id/textContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:enabledState="@{enabledState}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
