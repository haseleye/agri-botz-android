<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="startIcon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="title"
            type="String" />

        <variable
            name="subtitle"
            type="String" />

        <variable
            name="checked"
            type="Boolean" />

        <variable
            name="enabledState"
            type="Boolean" />

        <variable
            name="onCheckedChanged"
            type="android.widget.CompoundButton.OnCheckedChangeListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- Left icon -->
        <ImageView
            android:id="@+id/ivStartIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@null"
            android:src="@{startIcon}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@null" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text='@{title != null ? title : @string/no_label}'
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/colorOnBackground"
            app:layout_constraintStart_toEndOf="@id/ivStartIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/switchControl" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text='@{subtitle != null ? subtitle : ""}'
            android:textSize="13sp"
            android:textColor="@color/colorOnBackground"
            android:alpha="0.75"
            app:layout_constraintStart_toEndOf="@id/ivStartIcon"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toStartOf="@id/switchControl"
            app:visibleIf='@{subtitle != null &amp;&amp; !subtitle.isEmpty()}' />

        <!-- Switch -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked='@{checked != null ? checked : false}'
            android:enabled='@{enabledState != null ? enabledState : true}'
            android:onCheckedChanged="@{onCheckedChanged}"
            android:showText="false"
            android:textOn=""
            android:textOff=""
            app:useMaterialThemeColors="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
