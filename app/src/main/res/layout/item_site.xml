<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="site"
            type="com.example.agribotz.app.ui.home.SiteUi" />
        <variable
            name="viewModel"
            type="com.example.agribotz.app.viewmodels.home.SitesViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Site name -->
            <TextView
                android:id="@+id/siteName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{site.name}"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/renameSiteBtn" />

            <!-- Delete button -->
            <ImageView
                android:id="@+id/deleteSiteBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/Delete_Site"
                app:enabledState="@{site.numberOfGadgets == 0}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Rename button -->
            <ImageView
                android:id="@+id/renameSiteBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/Rename_Site"
                app:enabledState="@{!site.isTerminated}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/deleteSiteBtn"
                android:layout_marginEnd="8dp"/>

            <!-- Status Row -->
            <LinearLayout
                android:id="@+id/statusRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/siteName"
                app:layout_constraintStart_toStartOf="parent">

                <!-- CREATED -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/badge_created"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/Created"
                        android:onClick="@{() -> viewModel.onStatusIconClicked(site.createdResId, site.createdAtFormatted)}"
                        android:tooltipText="@{context.getString(site.createdResId, site.createdAtFormatted)}"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{site.createdAgo}"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnBackground" />
                </LinearLayout>

                <!-- TERMINATED -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:visibleIf="@{site.isTerminated}"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/badge_terminated"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/Terminated"
                        android:onClick="@{() -> viewModel.onStatusIconClicked(site.statusResId, site.statusDate)}"
                        android:tooltipText="@{context.getString(site.statusResId, site.statusDate)}"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{site.terminatedAgo}"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnBackground" />
                </LinearLayout>

                <!-- INACTIVE -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:visibleIf="@{!site.isTerminated &amp;&amp; !site.isActive}"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/badge_inactive"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/Inactive"
                        android:onClick="@{() -> viewModel.onStatusIconClicked(site.statusResId, site.statusDate)}"
                        android:tooltipText="@{context.getString(site.statusResId, site.statusDate)}"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{site.deactivatedAgo}"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnBackground" />
                </LinearLayout>

                <!-- ACTIVE -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:visibleIf="@{!site.isTerminated &amp;&amp; site.isActive}"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/badge_active"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/Active"
                        android:onClick="@{() -> viewModel.onStatusIconClicked(site.statusResId, site.statusDate)}"
                        android:tooltipText="@{context.getString(site.statusResId, site.statusDate)}"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{site.activatedAgo}"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnBackground" />
                </LinearLayout>

            </LinearLayout>

            <!-- Number of Gadgets -->
            <TextView
                android:id="@+id/siteGadget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{@string/Gadgets_Count(site.numberOfGadgets)}'
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/statusRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
